{
  "name": "sofamaxxing",
  "version": "1.0.0",
  "description": "Api to fetch anime/movies/tv shows",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:scraper && npm run build:api",
    "build:scraper": "cd packages/scraper && npm run build",
    "build:api": "cd packages/api && npm run build",
    "install:api": "cd packages/api && npm install"
  },
  "keywords": [
    "api",
    "anime",
    "movies",
    "tv"
  ],
  "author": "aleganza",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/node-fetch": "^2.6.12",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "sofamaxxing": "file:"
  }
}